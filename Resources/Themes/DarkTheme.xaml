<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================================== -->
    <!-- 语义颜色 Token — 暗色主题                                     -->
    <!-- 所有界面 XAML 通过 {DynamicResource Key} 引用，切换主题自动刷新 -->
    <!-- ========================================================== -->

    <!-- 背景 -->
    <SolidColorBrush x:Key="WindowBackground"           Color="#1E1E1E"/>
    <SolidColorBrush x:Key="HoverBackground"            Color="#2A2A2A"/>
    <SolidColorBrush x:Key="MenuItemSelectedBackground" Color="#1E3A5F"/>
    <SolidColorBrush x:Key="ListItemSelectedBackground" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="ListItemHoverBackground"    Color="#252525"/>
    <SolidColorBrush x:Key="AltRowBackground"           Color="#2D2D2D"/>
    <SolidColorBrush x:Key="RowSelectedBackground"      Color="#FFD700"/>
    <SolidColorBrush x:Key="RowHoverBackground"         Color="#323232"/>

    <!-- 前景（文字）-->
    <SolidColorBrush x:Key="PrimaryText"                Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryText"              Color="#C8C8C8"/>
    <SolidColorBrush x:Key="TertiaryText"               Color="#969696"/>
    <SolidColorBrush x:Key="SectionHeaderText"          Color="#DCDCDC"/>
    <SolidColorBrush x:Key="MenuItemSelectedForeground" Color="#60A5FA"/>
    <SolidColorBrush x:Key="DataGridHeaderText"         Color="#AAAAAA"/>
    <SolidColorBrush x:Key="RowSelectedForeground"      Color="#000000"/>
    <SolidColorBrush x:Key="RowNumberText"              Color="#969696"/>

    <!-- 边框 -->
    <SolidColorBrush x:Key="WindowBorder"               Color="#3C3C3C"/>
    <SolidColorBrush x:Key="InputBorder"                Color="#505050"/>
    <SolidColorBrush x:Key="SeparatorBorder"            Color="#3C3C3C"/>
    <SolidColorBrush x:Key="DataGridHeaderBorder"       Color="#3C3C3C"/>
    <SolidColorBrush x:Key="GroupHeaderBorder"          Color="#404040"/>

    <!-- ========================================================== -->
    <!-- 隐式控件样式 — 同类控件自动应用，无需在每个控件上单独设置       -->
    <!-- ========================================================== -->

    <!-- TextBox：修复暗色主题下输入框文字保持黑色的根本原因 -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground"     Value="{StaticResource PrimaryText}"/>
        <Setter Property="CaretBrush"     Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background"     Value="Transparent"/>
        <Setter Property="BorderBrush"    Value="{StaticResource InputBorder}"/>
        <Setter Property="SelectionBrush" Value="#4D0078D4"/>
    </Style>

    <!-- ComboBox（折叠状态）-->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground"  Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background"  Value="{StaticResource WindowBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
    </Style>

    <!-- ComboBoxItem（下拉条目）-->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground"  Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background"  Value="{StaticResource WindowBackground}"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
    </Style>

</ResourceDictionary>
