<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================================== -->
    <!-- 语义颜色 Token — 亮色主题                                     -->
    <!-- 所有界面 XAML 通过 {DynamicResource Key} 引用，切换主题自动刷新 -->
    <!-- ========================================================== -->

    <!-- 背景 -->
    <SolidColorBrush x:Key="WindowBackground"           Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HoverBackground"            Color="#F0F0F0"/>
    <SolidColorBrush x:Key="MenuItemSelectedBackground" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="ListItemSelectedBackground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ListItemHoverBackground"    Color="#F0F0F0"/>
    <SolidColorBrush x:Key="AltRowBackground"           Color="#F8F8F8"/>
    <SolidColorBrush x:Key="RowSelectedBackground"      Color="#E67E22"/>
    <SolidColorBrush x:Key="RowHoverBackground"         Color="#F0F6FF"/>

    <!-- 前景（文字）-->
    <SolidColorBrush x:Key="PrimaryText"                Color="#1A1A1A"/>
    <SolidColorBrush x:Key="SecondaryText"              Color="#666666"/>
    <SolidColorBrush x:Key="TertiaryText"               Color="#AAAAAA"/>
    <SolidColorBrush x:Key="SectionHeaderText"          Color="#333333"/>
    <SolidColorBrush x:Key="MenuItemSelectedForeground" Color="#1976D2"/>
    <SolidColorBrush x:Key="DataGridHeaderText"         Color="#888888"/>
    <SolidColorBrush x:Key="RowSelectedForeground"      Color="#FFFFFF"/>
    <SolidColorBrush x:Key="RowNumberText"              Color="#999999"/>

    <!-- 边框 -->
    <SolidColorBrush x:Key="WindowBorder"               Color="#E0E0E0"/>
    <SolidColorBrush x:Key="InputBorder"                Color="#DDDDDD"/>
    <SolidColorBrush x:Key="SeparatorBorder"            Color="#EEEEEE"/>
    <SolidColorBrush x:Key="DataGridHeaderBorder"       Color="#E8E8E8"/>
    <SolidColorBrush x:Key="GroupHeaderBorder"          Color="#E0E0E0"/>

    <!-- ========================================================== -->
    <!-- 隐式控件样式 — 同类控件自动应用，无需在每个控件上单独设置       -->
    <!-- ========================================================== -->

    <!-- TextBox：修复暗色主题下输入框文字保持黑色的根本原因 -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground"     Value="{StaticResource PrimaryText}"/>
        <Setter Property="CaretBrush"     Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background"     Value="Transparent"/>
        <Setter Property="BorderBrush"    Value="{StaticResource InputBorder}"/>
        <Setter Property="SelectionBrush" Value="#4D0078D4"/>
    </Style>

    <!-- ComboBox（折叠状态）-->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground"  Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background"  Value="{StaticResource WindowBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
    </Style>

    <!-- ComboBoxItem（下拉条目）-->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground"  Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background"  Value="{StaticResource WindowBackground}"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
    </Style>

</ResourceDictionary>
