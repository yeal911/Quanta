<Window x:Class="Quanta.Views.CommandSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="命令设置"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border x:Name="RootBorder" Background="White" CornerRadius="6" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="12,0">
                <TextBlock x:Name="TitleText" Text="命令设置" FontSize="13" FontWeight="SemiBold"
                           FontFamily="微软雅黑" VerticalAlignment="Center"/>
                <Button Content="✕" HorizontalAlignment="Right" Background="Transparent" Foreground="#999"
                        BorderThickness="0" Padding="6,2" Click="Cancel_Click" FontSize="13" Cursor="Hand"
                        FontFamily="微软雅黑" Height="24" MinWidth="24"/>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="12,4,12,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Hotkey + Buttons Row -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hotkey -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="HotkeyLabel" Text="快捷键：" FontSize="12" FontFamily="微软雅黑"
                                   Foreground="#666" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox x:Name="HotkeyTextBox" Text="Alt+Space" Width="120"
                                 IsReadOnly="True" VerticalAlignment="Center" Padding="6,3"
                                 Background="Transparent" BorderBrush="#DDD" BorderThickness="1"
                                 FontSize="12" FontFamily="Consolas"
                                 PreviewKeyDown="HotkeyTextBox_PreviewKeyDown" GotFocus="HotkeyTextBox_GotFocus"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="AddButton" Content="添加" Click="AddCommand_Click"
                                Background="#0078D4" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                        <Button x:Name="DeleteButton" Content="删除" Click="DeleteCommand_Click"
                                Background="#E74C3C" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                        <Button x:Name="SaveButton" Content="保存" Click="SaveCommand_Click"
                                Background="#27AE60" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                        <!-- Separator -->
                        <Border Width="1" Background="#DDD" Margin="4,2,8,2"/>
                        <Button x:Name="ImportButton" Content="导入" Click="ImportCommands_Click"
                                Background="#E67E22" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                        <Button x:Name="ExportButton" Content="导出" Click="ExportCommands_Click"
                                Background="#E67E22" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <!-- Search box -->
                <Grid Grid.Row="1" Margin="0,0,0,6">
                    <TextBox x:Name="CommandSearchBox" Padding="6,3,24,3"
                             FontSize="12" FontFamily="微软雅黑"
                             BorderBrush="#DDD" BorderThickness="1" Background="Transparent"
                             TextChanged="CommandSearchBox_TextChanged"/>
                    <TextBlock x:Name="CommandSearchPlaceholder" Text="输入关键字搜索命令"
                               FontSize="12" Foreground="#BBB" FontFamily="微软雅黑"
                               Padding="8,5" IsHitTestVisible="False" VerticalAlignment="Center"/>
                    <!-- Clear button -->
                    <TextBlock x:Name="SearchClearBtn" Text="✕" FontSize="11" Foreground="#999"
                               HorizontalAlignment="Right" VerticalAlignment="Center"
                               Margin="0,0,6,0" Cursor="Hand" Visibility="Collapsed"
                               MouseLeftButtonUp="SearchClearBtn_Click"/>
                </Grid>

                <!-- Flat DataGrid -->
                <DataGrid Grid.Row="2" x:Name="CommandsGrid"
                          AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          HeadersVisibility="Column" GridLinesVisibility="None"
                          RowHeight="30" FontSize="12" FontFamily="微软雅黑"
                          BorderThickness="0" Background="Transparent"
                          RowBackground="Transparent" AlternatingRowBackground="#F8F8F8"
                          HorizontalGridLinesBrush="#F0F0F0"
                          SelectedCellsChanged="CommandsGrid_SelectedCellsChanged"
                          SelectionMode="Single" SelectionUnit="FullRow">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#888"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E8E8E8"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="4,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="KeywordColumn" Header="关键字" Binding="{Binding Keyword}" Width="80"/>
                        <DataGridTextColumn x:Name="NameColumn" Header="名称" Binding="{Binding Name}" Width="100"/>
                        <DataGridComboBoxColumn x:Name="TypeColumn" Header="类型" SelectedItemBinding="{Binding Type}" Width="80">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:String>Url</sys:String>
                                    <sys:String>Program</sys:String>
                                    <sys:String>Shell</sys:String>
                                    <sys:String>Directory</sys:String>
                                    <sys:String>Calculator</sys:String>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>
                        <DataGridTextColumn x:Name="PathColumn" Header="路径/URL" Binding="{Binding Path}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                <TextBlock x:Name="FooterText" Text="拖动标题栏移动 | 输入关键字搜索 | 回车执行"
                           Foreground="#AAA" FontSize="10" FontFamily="微软雅黑"
                           Margin="12,0" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
