<Window x:Class="Quanta.Views.CommandSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        Height="500" Width="750"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <!-- 资源：选中行背景色和字体颜色，可在代码中动态修改 -->
    <Window.Resources>
        <SolidColorBrush x:Key="SelectedRowBackgroundBrush" Color="#E67E22"/>
        <SolidColorBrush x:Key="SelectedRowForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="HoverRowBackgroundBrush" Color="#F0F6FF"/>
        
        <!-- 菜单项按钮样式 -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="微软雅黑"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="RootBorder" Background="White" CornerRadius="6" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="12,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" Text="设置" FontSize="13" FontWeight="SemiBold"
                               FontFamily="微软雅黑" VerticalAlignment="Center"/>
                    <TextBlock x:Name="AutoSaveIndicator" Text=" · 保存成功" FontSize="12" FontWeight="Normal"
                               Foreground="#27AE60" FontFamily="微软雅黑" VerticalAlignment="Center"
                               Visibility="Collapsed" Margin="4,0,0,0"/>
                </StackPanel>
                <Button x:Name="CloseButton" Content="✕" HorizontalAlignment="Right" Background="Transparent" Foreground="#999"
                        BorderThickness="0" Padding="6,2" Click="Cancel_Click" FontSize="13" Cursor="Hand"
                        FontFamily="微软雅黑" Height="24" MinWidth="24"/>
            </Grid>

            <!-- Content: Left Menu + Right Panel -->
            <Grid Grid.Row="1" Margin="8,4,12,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <StackPanel Grid.Column="0" Margin="4,0,8,0">
                    <Button x:Name="MenuGeneral" Content="通用配置" Style="{StaticResource MenuButtonStyle}" 
                            Click="MenuItem_Click" Tag="General"/>
                    <Button x:Name="MenuRecording" Content="录音配置" Style="{StaticResource MenuButtonStyle}" 
                            Click="MenuItem_Click" Tag="Recording"/>
                    <Button x:Name="MenuExchangeRate" Content="汇率接口" Style="{StaticResource MenuButtonStyle}" 
                            Click="MenuItem_Click" Tag="ExchangeRate"/>
                    <Button x:Name="MenuCommands" Content="命令管理" Style="{StaticResource MenuButtonStyle}" 
                            Click="MenuItem_Click" Tag="Commands"/>
                </StackPanel>

                <!-- Right Content Panels -->
                <Grid Grid.Column="1">
                    <!-- 通用配置 Panel -->
                    <Grid x:Name="PanelGeneral" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="GeneralSectionLabel" Text="通用设置" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#333" FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Settings Content -->
                        <StackPanel Grid.Row="1">
                            <!-- 语言切换 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="LanguageLabel" Text="语言：" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                <ComboBox x:Name="LanguageComboBox" Width="100" FontSize="11" VerticalAlignment="Center"
                                          SelectionChanged="LanguageComboBox_SelectionChanged">
                                    <ComboBoxItem Content="中文" Tag="zh-CN"/>
                                    <ComboBoxItem Content="English" Tag="en-US"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- 快捷键 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="HotkeyLabel" Text="快捷键：" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                <TextBox x:Name="HotkeyTextBox" Text="Alt+Space" Width="140"
                                         IsReadOnly="True" VerticalAlignment="Center" Padding="8,4"
                                         Background="Transparent" BorderBrush="#DDD" BorderThickness="1"
                                         FontSize="12" FontFamily="Consolas"
                                         PreviewKeyDown="HotkeyTextBox_PreviewKeyDown" GotFocus="HotkeyTextBox_GotFocus"
                                         MouseDoubleClick="HotkeyTextBox_MouseDoubleClick" ToolTip="双击清除快捷键"/>
                            </StackPanel>

                            <!-- 开机启动 -->
                            <CheckBox x:Name="StartWithWindowsCheck" Content="开机启动" FontSize="12" FontFamily="微软雅黑"
                                      VerticalAlignment="Center" Margin="0,0,0,12"
                                      Checked="StartWithWindowsCheck_Changed" Unchecked="StartWithWindowsCheck_Changed"/>

                            <!-- 最多显示结果数 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="MaxResultsLabel" Text="最多显示：" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                <TextBox x:Name="MaxResultsBox" Width="50" Padding="4,2"
                                         FontSize="12" FontFamily="Consolas" TextAlignment="Center"
                                         BorderBrush="#DDD" BorderThickness="1" Background="Transparent"
                                         PreviewTextInput="MaxResultsBox_PreviewTextInput"
                                         LostFocus="MaxResultsBox_LostFocus" VerticalAlignment="Center"/>
                                <TextBlock x:Name="MaxResultsSuffix" Text=" 条结果" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="#666" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 二维码阈值 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="QRCodeThresholdLabel" Text="二维码阈值：" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                <TextBox x:Name="QRCodeThresholdBox" Width="50" Padding="4,2"
                                         FontSize="12" FontFamily="Consolas" TextAlignment="Center"
                                         BorderBrush="#DDD" BorderThickness="1" Background="Transparent"
                                         PreviewTextInput="QRCodeThresholdBox_PreviewTextInput"
                                         LostFocus="QRCodeThresholdBox_LostFocus" VerticalAlignment="Center"/>
                                <TextBlock x:Name="QRCodeThresholdSuffix" Text=" 字符" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="#666" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- 录音配置 Panel -->
                    <Grid x:Name="PanelRecording" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="RecordingSectionLabel" Text="录音设置" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#333" FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Recording Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- 录制源 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordSourceLabel" Text="录制源：" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                    <ComboBox x:Name="RecordSourceCombo" Width="120" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordSourceCombo_SelectionChanged">
                                        <ComboBoxItem Content="Mic" Tag="Mic"/>
                                        <ComboBoxItem Content="Speaker" Tag="Speaker"/>
                                        <ComboBoxItem Content="Mic&amp;Speaker" Tag="Mic&amp;Speaker"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 输出格式 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordFormatLabel" Text="输出格式：" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                    <ComboBox x:Name="RecordFormatCombo" Width="80" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordFormatCombo_SelectionChanged">
                                        <ComboBoxItem Content="m4a" Tag="m4a"/>
                                        <ComboBoxItem Content="mp3" Tag="mp3"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 码率 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordBitrateLabel" Text="码率：" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                    <ComboBox x:Name="RecordBitrateCombo" Width="100" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordBitrateCombo_SelectionChanged">
                                        <ComboBoxItem Content="32 kbps"  Tag="32"/>
                                        <ComboBoxItem Content="64 kbps"  Tag="64"/>
                                        <ComboBoxItem Content="96 kbps"  Tag="96"/>
                                        <ComboBoxItem Content="128 kbps" Tag="128"/>
                                        <ComboBoxItem Content="160 kbps" Tag="160"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 声道 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordChannelsLabel" Text="声道：" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                    <ComboBox x:Name="RecordChannelsCombo" Width="100" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordChannelsCombo_SelectionChanged">
                                        <ComboBoxItem Content="立体声" Tag="2"/>
                                        <ComboBoxItem Content="单声道" Tag="1"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 输出路径 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordOutputPathLabel" Text="输出路径：" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="#666" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                                    <TextBox x:Name="RecordOutputPathBox" Width="280" FontSize="11" FontFamily="Consolas"
                                             Padding="4,2" BorderBrush="#DDD" BorderThickness="1" Background="Transparent"
                                             VerticalAlignment="Center"
                                             LostFocus="RecordOutputPathBox_LostFocus"/>
                                    <Button x:Name="RecordBrowseButton" Content="浏览" Margin="6,0,0,0"
                                            Background="#0078D4" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                            BorderThickness="0" Padding="10,3" Height="26" Cursor="Hand"
                                            Click="RecordBrowseButton_Click"/>
                                </StackPanel>

                                <!-- 预估文件大小 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,4,0,6">
                                    <TextBlock x:Name="RecordEstimatedSizeLabel" Text="预估大小：" FontSize="11" FontFamily="微软雅黑"
                                               Foreground="#888" VerticalAlignment="Center" Width="120"/>
                                    <TextBlock x:Name="RecordEstimatedSizeValue" Text="-- KB/分钟" FontSize="11" FontFamily="Consolas"
                                               Foreground="#E67E22" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <!-- 汇率接口 Panel -->
                    <Grid x:Name="PanelExchangeRate" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="ExchangeRateSectionLabel" Text="汇率接口" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#333" FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Exchange Rate Content -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="API Key (ExchangeRate-API)" FontSize="11" Foreground="#888" Margin="0,0,0,6"/>
                            <TextBox x:Name="ExchangeRateApiKeyBox" Width="350" FontSize="11" FontFamily="Consolas"
                                     Padding="8,6" BorderBrush="#DDD" BorderThickness="1" Background="Transparent"
                                     HorizontalAlignment="Left"
                                     LostFocus="ExchangeRateApiKeyBox_LostFocus"/>
                            <TextBlock x:Name="ExchangeRateApiHint" Text="免费 API: https://exchangerate-api.com" FontSize="10" Foreground="#AAA" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 命令管理 Panel -->
                    <Grid x:Name="PanelCommands" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="CommandsSectionLabel" Text="命令管理" FontSize="14" FontWeight="SemiBold"
                                       Foreground="#333" FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Search + Buttons -->
                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0,0,8,0">
                                <TextBox x:Name="CommandSearchBox" Padding="6,3,24,3"
                                         FontSize="12" FontFamily="微软雅黑"
                                         BorderBrush="#DDD" BorderThickness="1" Background="Transparent"
                                         TextChanged="CommandSearchBox_TextChanged"/>
                                <TextBlock x:Name="CommandSearchPlaceholder" Text="输入关键字搜索命令"
                                           FontSize="12" Foreground="#BBB" FontFamily="微软雅黑"
                                           Padding="8,5" IsHitTestVisible="False" VerticalAlignment="Center"/>
                                <TextBlock x:Name="SearchClearBtn" Text="✕" FontSize="11" Foreground="#999"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Margin="0,0,6,0" Cursor="Hand" Visibility="Collapsed"
                                           MouseLeftButtonUp="SearchClearBtn_Click"/>
                            </Grid>

                            <!-- 竖线 -->
                            <Border Grid.Column="1" Width="1" Background="#DDD" VerticalAlignment="Stretch" Margin="0,4,8,4"/>

                            <!-- 导入/导出按钮 -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Button x:Name="ImportButton" Click="ImportCommands_Click"
                                        Background="#E67E22" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="ExportButton" Click="ExportCommands_Click"
                                        Background="#E67E22" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand"/>
                            </StackPanel>

                            <!-- 竖线 -->
                            <Border Grid.Column="3" Width="1" Background="#DDD" VerticalAlignment="Stretch" Margin="0,4,8,4"/>

                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="AddButton" Content="添加" Click="AddCommand_Click"
                                        Background="#0078D4" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="DeleteButton" Content="删除" Click="DeleteCommand_Click"
                                        Background="#E74C3C" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="TestButton" Content="测试" Click="TestCommand_Click"
                                        Background="#8E44AD" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="SaveButton" Content="保存" Click="SaveCommand_Click"
                                        Background="#27AE60" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="2" x:Name="CommandsGrid"
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  RowHeight="28" FontSize="12" FontFamily="微软雅黑"
                                  BorderThickness="0" Background="Transparent"
                                  SelectedCellsChanged="CommandsGrid_SelectedCellsChanged"
                                  LoadingRow="CommandsGrid_LoadingRow"
                                  SelectionMode="Single" SelectionUnit="FullRow"
                                  IsReadOnly="False" CanUserSortColumns="True"
                                  MouseDoubleClick="CommandsGrid_MouseDoubleClick"
                                  VerticalGridLinesBrush="Transparent"
                                  HorizontalGridLinesBrush="Transparent">

                            <!-- Semi-transparent scrollbar -->
                            <DataGrid.Resources>
                                <Style TargetType="ScrollBar">
                                    <Setter Property="Width" Value="6"/>
                                    <Setter Property="MinWidth" Value="6"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ScrollBar">
                                                <Grid>
                                                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                        <Track.Thumb>
                                                            <Thumb x:Name="thumb">
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Border x:Name="thumbBorder" Background="#30888888" CornerRadius="3"/>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="thumbBorder" Property="Background" Value="#80888888"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsDragging" Value="True">
                                                                                <Setter TargetName="thumbBorder" Property="Background" Value="#A0888888"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#888"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E8E8E8"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- Row header for row numbers -->
                            <DataGrid.RowHeaderStyle>
                                <Style TargetType="DataGridRowHeader">
                                    <Setter Property="Width" Value="30"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridRowHeader">
                                                <Border Background="Transparent">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                               Foreground="#999" FontSize="10" FontFamily="Consolas"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.RowHeaderStyle>

                            <!-- 简洁的行样式：选中高亮 -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FF6B35"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="KeywordColumn" Header="关键字" Binding="{Binding Keyword}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="ToolTip" Value="{Binding Keyword}"/>
                                            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn x:Name="NameColumn" Header="名称" Binding="{Binding Name}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="ToolTip" Value="{Binding Name}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridComboBoxColumn x:Name="TypeColumn" Header="类型" SelectedItemBinding="{Binding Type}" Width="70">
                                    <DataGridComboBoxColumn.ItemsSource>
                                        <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                            <sys:String>Url</sys:String>
                                            <sys:String>Program</sys:String>
                                            <sys:String>Shell</sys:String>
                                            <sys:String>Directory</sys:String>
                                        </x:Array>
                                    </DataGridComboBoxColumn.ItemsSource>
                                    <DataGridComboBoxColumn.ElementStyle>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="ToolTip" Value="{Binding Type}"/>
                                        </Style>
                                    </DataGridComboBoxColumn.ElementStyle>
                                </DataGridComboBoxColumn>
                                <DataGridTextColumn x:Name="PathColumn" Header="路径/URL" Binding="{Binding Path}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="ToolTip" Value="{Binding Path}"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn x:Name="AdminColumn" Header="管理员" Binding="{Binding RunAsAdmin}" Width="55"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- 命令参数提示 -->
                        <TextBlock x:Name="CommandHintText" Grid.Row="3" Text="提示：命令参数占位符{%p}"
                                   Foreground="#AAA" FontSize="10" FontFamily="微软雅黑"
                                   Margin="0,6,0,0"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Footer (空) -->
            <Border Grid.Row="2" BorderBrush="#EEE" BorderThickness="0,1,0,0">
                <TextBlock x:Name="FooterText" Text=""
                           Foreground="#AAA" FontSize="10" FontFamily="微软雅黑"
                           Margin="12,0" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
