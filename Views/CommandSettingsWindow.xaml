<Window x:Class="Quanta.Views.CommandSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        Height="500" Width="750"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- 菜单项按钮样式：使用 DynamicResource，主题切换时自动刷新 -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background"               Value="Transparent"/>
            <Setter Property="Foreground"               Value="{DynamicResource SecondaryText}"/>
            <Setter Property="BorderThickness"          Value="0"/>
            <Setter Property="Padding"                  Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize"                 Value="12"/>
            <Setter Property="FontFamily"               Value="微软雅黑"/>
            <Setter Property="Cursor"                   Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <!-- TemplateBinding 让 Style.Triggers 可通过 DynamicResource 控制背景/前景 -->
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="{DynamicResource MenuItemSelectedBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource MenuItemSelectedForeground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border x:Name="RootBorder"
            Background="{DynamicResource WindowBackground}"
            CornerRadius="6"
            BorderBrush="{DynamicResource WindowBorder}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="12,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" Text="设置" FontSize="13" FontWeight="SemiBold"
                               FontFamily="微软雅黑" VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryText}"/>
                    <TextBlock x:Name="AutoSaveIndicator" Text=" · 保存成功" FontSize="12" FontWeight="Normal"
                               Foreground="#27AE60" FontFamily="微软雅黑" VerticalAlignment="Center"
                               Visibility="Collapsed" Margin="4,0,0,0"/>
                </StackPanel>
                <Button x:Name="CloseButton" Content="✕" HorizontalAlignment="Right"
                        Background="Transparent" Foreground="{DynamicResource TertiaryText}"
                        BorderThickness="0" Padding="6,2" Click="Cancel_Click"
                        FontSize="13" Cursor="Hand" FontFamily="微软雅黑" Height="24" MinWidth="24"/>
            </Grid>

            <!-- Content: Left Menu + Right Panel -->
            <Grid Grid.Row="1" Margin="8,4,12,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <StackPanel Grid.Column="0" Margin="4,0,8,0">
                    <Button x:Name="MenuGeneral"      Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click"/>
                    <Button x:Name="MenuRecording"    Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click"/>
                    <Button x:Name="MenuFileSearch"   Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click"/>
                    <Button x:Name="MenuExchangeRate" Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click"/>
                    <Button x:Name="MenuCommands"     Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click"/>
                </StackPanel>

                <!-- Right Content Panels -->
                <Grid Grid.Column="1">

                    <!-- 通用配置 Panel -->
                    <Grid x:Name="PanelGeneral" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="GeneralSectionLabel" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SectionHeaderText}"
                                       FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <StackPanel Grid.Row="1">
                            <!-- 语言切换 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="LanguageLabel" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="{DynamicResource SecondaryText}"
                                           VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                <ComboBox x:Name="LanguageComboBox" Width="100" FontSize="11" VerticalAlignment="Center"
                                          SelectionChanged="LanguageComboBox_SelectionChanged">
                                </ComboBox>
                            </StackPanel>

                            <!-- 快捷键 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="HotkeyLabel" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="{DynamicResource SecondaryText}"
                                           VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                <TextBox x:Name="HotkeyTextBox" Text="Alt+Space" Width="140"
                                         IsReadOnly="True" VerticalAlignment="Center" Padding="8,4"
                                         BorderThickness="1" FontSize="12" FontFamily="Consolas"
                                         PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                                         GotFocus="HotkeyTextBox_GotFocus"
                                         MouseDoubleClick="HotkeyTextBox_MouseDoubleClick"
                                         ToolTip="双击清除快捷键"/>
                            </StackPanel>

                            <!-- 开机启动 -->
                            <CheckBox x:Name="StartWithWindowsCheck" FontSize="12" FontFamily="微软雅黑"
                                      VerticalAlignment="Center" Margin="0,0,0,12"
                                      Checked="StartWithWindowsCheck_Changed"
                                      Unchecked="StartWithWindowsCheck_Changed"/>

                            <!-- 暗色主题 -->
                            <CheckBox x:Name="DarkThemeCheck" FontSize="12" FontFamily="微软雅黑"
                                      VerticalAlignment="Center" Margin="0,0,0,12"
                                      Checked="DarkThemeCheck_Changed"
                                      Unchecked="DarkThemeCheck_Changed"/>

                            <!-- 最多显示结果数 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="MaxResultsLabel" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="{DynamicResource SecondaryText}"
                                           VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                <TextBox x:Name="MaxResultsBox" Width="50" Padding="4,2"
                                         FontSize="12" FontFamily="Consolas" TextAlignment="Center"
                                         BorderThickness="1" VerticalAlignment="Center"
                                         PreviewTextInput="MaxResultsBox_PreviewTextInput"
                                         LostFocus="MaxResultsBox_LostFocus"/>
                                <TextBlock x:Name="MaxResultsSuffix" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 二维码阈值 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock x:Name="QRCodeThresholdLabel" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="{DynamicResource SecondaryText}"
                                           VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                <TextBox x:Name="QRCodeThresholdBox" Width="50" Padding="4,2"
                                         FontSize="12" FontFamily="Consolas" TextAlignment="Center"
                                         BorderThickness="1" VerticalAlignment="Center"
                                         PreviewTextInput="QRCodeThresholdBox_PreviewTextInput"
                                         LostFocus="QRCodeThresholdBox_LostFocus"/>
                                <TextBlock x:Name="QRCodeThresholdSuffix" FontSize="12" FontFamily="微软雅黑"
                                           Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- 录音配置 Panel -->
                    <Grid x:Name="PanelRecording" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="RecordingSectionLabel" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SectionHeaderText}"
                                       FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- 录制源 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordSourceLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <ComboBox x:Name="RecordSourceCombo" Width="120" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordSourceCombo_SelectionChanged">
                                    </ComboBox>
                                </StackPanel>

                                <!-- 输出格式 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordFormatLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <ComboBox x:Name="RecordFormatCombo" Width="80" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordFormatCombo_SelectionChanged">
                                    </ComboBox>
                                </StackPanel>

                                <!-- 码率 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordBitrateLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <ComboBox x:Name="RecordBitrateCombo" Width="100" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordBitrateCombo_SelectionChanged">
                                    </ComboBox>
                                </StackPanel>

                                <!-- 声道 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordChannelsLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <ComboBox x:Name="RecordChannelsCombo" Width="100" FontSize="11" VerticalAlignment="Center"
                                              SelectionChanged="RecordChannelsCombo_SelectionChanged">
                                    </ComboBox>
                                </StackPanel>

                                <!-- 输出路径 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="RecordOutputPathLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <TextBox x:Name="RecordOutputPathBox" Width="280" FontSize="11" FontFamily="Consolas"
                                             Padding="4,2" BorderThickness="1" VerticalAlignment="Center"
                                             LostFocus="RecordOutputPathBox_LostFocus"/>
                                    <Button x:Name="RecordBrowseButton" Margin="6,0,0,0"
                                            Background="#0078D4" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                            BorderThickness="0" Padding="10,3" Height="26" Cursor="Hand"
                                            Click="RecordBrowseButton_Click"/>
                                </StackPanel>

                                <!-- 预估文件大小 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,4,0,6">
                                    <TextBlock x:Name="RecordEstimatedSizeLabel" FontSize="11" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource TertiaryText}"
                                               VerticalAlignment="Center" Width="160"/>
                                    <TextBlock x:Name="RecordEstimatedSizeValue" FontSize="11" FontFamily="Consolas"
                                               Foreground="#E67E22" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <!-- 文件搜索配置 Panel -->
                    <Grid x:Name="PanelFileSearch" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="FileSearchSectionLabel" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SectionHeaderText}"
                                       FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- 启用文件搜索 -->
                                <CheckBox x:Name="FileSearchEnabledCheck" FontSize="12" FontFamily="微软雅黑"
                                          VerticalAlignment="Center" Margin="0,0,0,12"
                                          Checked="FileSearchEnabledCheck_Changed"
                                          Unchecked="FileSearchEnabledCheck_Changed"/>

                                <!-- 搜索目录 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                    <TextBlock x:Name="FileSearchDirectoriesLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <TextBox x:Name="FileSearchDirectoriesBox" Width="280" FontSize="11" FontFamily="Consolas"
                                             Padding="4,2" BorderThickness="1" VerticalAlignment="Center"
                                             LostFocus="FileSearchDirectoriesBox_LostFocus"/>
                                </StackPanel>
                                <TextBlock x:Name="FileSearchDirectoriesHint" FontSize="10"
                                           Foreground="{DynamicResource TertiaryText}" Margin="168,0,0,12"/>

                                <!-- 每个目录最多扫描文件数 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="FileSearchMaxFilesLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <TextBox x:Name="FileSearchMaxFilesBox" Width="50" Padding="4,2"
                                             FontSize="12" FontFamily="Consolas" TextAlignment="Center"
                                             BorderThickness="1" VerticalAlignment="Center"
                                             PreviewTextInput="FileSearchMaxFilesBox_PreviewTextInput"
                                             LostFocus="FileSearchMaxFilesBox_LostFocus"/>
                                    <TextBlock x:Name="FileSearchMaxFilesSuffix" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- 最多显示结果数 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock x:Name="FileSearchMaxResultsLabel" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" Margin="0,0,8,0" Width="160"/>
                                    <TextBox x:Name="FileSearchMaxResultsBox" Width="50" Padding="4,2"
                                             FontSize="12" FontFamily="Consolas" TextAlignment="Center"
                                             BorderThickness="1" VerticalAlignment="Center"
                                             PreviewTextInput="FileSearchMaxResultsBox_PreviewTextInput"
                                             LostFocus="FileSearchMaxResultsBox_LostFocus"/>
                                    <TextBlock x:Name="FileSearchMaxResultsSuffix" FontSize="12" FontFamily="微软雅黑"
                                               Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- 递归搜索子目录 -->
                                <CheckBox x:Name="FileSearchRecursiveCheck" FontSize="12" FontFamily="微软雅黑"
                                          VerticalAlignment="Center" Margin="168,0,0,0"
                                          Checked="FileSearchRecursiveCheck_Changed"
                                          Unchecked="FileSearchRecursiveCheck_Changed"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <!-- 汇率接口 Panel -->
                    <Grid x:Name="PanelExchangeRate" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="ExchangeRateSectionLabel" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SectionHeaderText}"
                                       FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <StackPanel Grid.Row="1">
                            <TextBlock Text="API Key (ExchangeRate-API)" FontSize="11"
                                       Foreground="{DynamicResource TertiaryText}" Margin="0,0,0,6"/>
                            <TextBox x:Name="ExchangeRateApiKeyBox" Width="350" FontSize="11" FontFamily="Consolas"
                                     Padding="8,6" BorderThickness="1" HorizontalAlignment="Left"
                                     LostFocus="ExchangeRateApiKeyBox_LostFocus"/>
                            <TextBlock x:Name="ExchangeRateApiHint" FontSize="10"
                                       Foreground="{DynamicResource TertiaryText}" Margin="0,6,0,0"/>

                            <!-- 缓存时长 -->
                            <StackPanel Orientation="Horizontal" Margin="0,16,0,4">
                                <TextBlock x:Name="ExchangeRateCacheLabel" FontSize="11"
                                           Foreground="{DynamicResource SecondaryText}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="ExchangeRateCacheHoursBox" Width="60" FontSize="11"
                                         Padding="6,4" BorderThickness="1" HorizontalAlignment="Left"
                                         LostFocus="ExchangeRateCacheHoursBox_LostFocus"/>
                                <TextBlock x:Name="ExchangeRateCacheUnit" FontSize="11"
                                           Foreground="{DynamicResource TertiaryText}"
                                           VerticalAlignment="Center" Margin="6,0,0,0"/>
                            </StackPanel>
                            <TextBlock x:Name="ExchangeRateCacheHint" FontSize="10"
                                       Foreground="{DynamicResource TertiaryText}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 命令管理 Panel -->
                    <Grid x:Name="PanelCommands" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,4,0,10">
                            <TextBlock x:Name="CommandsSectionLabel" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SectionHeaderText}"
                                       FontFamily="微软雅黑" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Search + Buttons -->
                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0,0,8,0">
                                <TextBox x:Name="CommandSearchBox" Padding="6,3,24,3"
                                         FontSize="12" FontFamily="微软雅黑" BorderThickness="1"
                                         TextChanged="CommandSearchBox_TextChanged"/>
                                <TextBlock x:Name="CommandSearchPlaceholder" FontSize="12"
                                           Foreground="{DynamicResource TertiaryText}"
                                           FontFamily="微软雅黑" Padding="8,5"
                                           IsHitTestVisible="False" VerticalAlignment="Center"/>
                                <TextBlock x:Name="SearchClearBtn" Text="✕" FontSize="11"
                                           Foreground="{DynamicResource TertiaryText}"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Margin="0,0,6,0" Cursor="Hand" Visibility="Collapsed"
                                           MouseLeftButtonUp="SearchClearBtn_Click"/>
                            </Grid>

                            <!-- 竖线分隔 -->
                            <Border Grid.Column="1" Width="1" Background="{DynamicResource InputBorder}"
                                    VerticalAlignment="Stretch" Margin="0,4,8,4"/>

                            <!-- 导入/导出按钮 -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                <Button x:Name="ImportButton" Click="ImportCommands_Click"
                                        Background="#E67E22" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="ExportButton" Click="ExportCommands_Click"
                                        Background="#E67E22" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand"/>
                            </StackPanel>

                            <!-- 竖线分隔 -->
                            <Border Grid.Column="3" Width="1" Background="{DynamicResource InputBorder}"
                                    VerticalAlignment="Stretch" Margin="0,4,8,4"/>

                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="AddButton"    Click="AddCommand_Click"
                                        Background="#0078D4" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="DeleteButton" Click="DeleteCommand_Click"
                                        Background="#E74C3C" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="TestButton"   Click="TestCommand_Click"
                                        Background="#8E44AD" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand" Margin="0,0,4,0"/>
                                <Button x:Name="SaveButton"   Click="SaveCommand_Click"
                                        Background="#27AE60" Foreground="White" FontSize="11" FontFamily="微软雅黑"
                                        BorderThickness="0" Padding="10,4" Height="26" MinWidth="50" Cursor="Hand"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid：AlternationCount=2 配合 RowStyle AlternationIndex 触发器控制交替色 -->
                        <!-- 不用 AlternatingRowBackground 属性，因为它优先级高于 RowStyle 触发器，会阻止选中色生效 -->
                        <DataGrid Grid.Row="2" x:Name="CommandsGrid"
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  HeadersVisibility="Column" GridLinesVisibility="None"
                                  RowHeight="28" FontSize="12" FontFamily="微软雅黑"
                                  BorderThickness="0" Background="Transparent"
                                  Foreground="{DynamicResource PrimaryText}"
                                  AlternationCount="2"
                                  SelectedCellsChanged="CommandsGrid_SelectedCellsChanged"
                                  LoadingRow="CommandsGrid_LoadingRow"
                                  SelectionMode="Single" SelectionUnit="FullRow"
                                  IsReadOnly="False" CanUserSortColumns="True"
                                  MouseDoubleClick="CommandsGrid_MouseDoubleClick"
                                  VerticalGridLinesBrush="Transparent"
                                  HorizontalGridLinesBrush="Transparent">

                            <DataGrid.Resources>
                                <!-- 半透明滚动条 -->
                                <Style TargetType="ScrollBar">
                                    <Setter Property="Width" Value="6"/>
                                    <Setter Property="MinWidth" Value="6"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ScrollBar">
                                                <Grid>
                                                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Border x:Name="thumbBorder" Background="#30888888" CornerRadius="3"/>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="thumbBorder" Property="Background" Value="#80888888"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsDragging" Value="True">
                                                                                <Setter TargetName="thumbBorder" Property="Background" Value="#A0888888"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Resources>

                            <!-- 列头：使用 DynamicResource，主题切换自动刷新 -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background"       Value="Transparent"/>
                                    <Setter Property="Foreground"       Value="{DynamicResource DataGridHeaderText}"/>
                                    <Setter Property="FontSize"         Value="11"/>
                                    <Setter Property="FontWeight"       Value="Normal"/>
                                    <Setter Property="Padding"          Value="6,4"/>
                                    <Setter Property="BorderThickness"  Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush"      Value="{DynamicResource DataGridHeaderBorder}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- 行号列 -->
                            <DataGrid.RowHeaderStyle>
                                <Style TargetType="DataGridRowHeader">
                                    <Setter Property="Width"            Value="30"/>
                                    <Setter Property="Background"       Value="Transparent"/>
                                    <Setter Property="BorderThickness"  Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridRowHeader">
                                                <Border Background="Transparent">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                               Foreground="{DynamicResource RowNumberText}"
                                                               FontSize="10" FontFamily="Consolas"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.RowHeaderStyle>

                            <!-- 行样式：触发器按优先级从低到高排列（后定义的 WPF Trigger/MultiTrigger 优先级更高）
                                 ① 偶数行底色 → ② 奇数行底色 → ③ 悬浮色 → ④ 偶数行选中 → ⑤ 奇数行选中（MultiTrigger，最高）
                                 注意：不使用 DataGrid.RowBackground/AlternatingRowBackground 属性，
                                       因为它们通过 SetCurrentValue 施加，优先级高于 RowStyle 触发器，会阻止选中色生效 -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <!-- ① 偶数行底色（AlternationIndex=0）：通过触发器设置，避免用 RowBackground 属性
                                             （RowBackground 由 DataGrid 内部 SetCurrentValue 施加，会干扰选中色触发器）-->
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                            <Setter Property="Background" Value="{DynamicResource WindowBackground}"/>
                                        </Trigger>
                                        <!-- ② 奇数行底色（AlternationIndex=1）-->
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="{DynamicResource AltRowBackground}"/>
                                        </Trigger>
                                        <!-- ③ 悬浮（非选中状态）-->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected"  Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.Setters>
                                                <Setter Property="Background" Value="{DynamicResource RowHoverBackground}"/>
                                            </MultiTrigger.Setters>
                                        </MultiTrigger>
                                        <!-- ④ 偶数行选中 -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected"                    Value="True"/>
                                                <Condition Property="ItemsControl.AlternationIndex" Value="0"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.Setters>
                                                <Setter Property="Background" Value="{DynamicResource RowSelectedBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource RowSelectedForeground}"/>
                                            </MultiTrigger.Setters>
                                        </MultiTrigger>
                                        <!-- ⑤ 奇数行选中（定义最靠后，优先级最高，明确覆盖②的交替色）-->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected"                    Value="True"/>
                                                <Condition Property="ItemsControl.AlternationIndex" Value="1"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.Setters>
                                                <Setter Property="Background" Value="{DynamicResource RowSelectedBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource RowSelectedForeground}"/>
                                            </MultiTrigger.Setters>
                                        </MultiTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <!-- 单元格样式：选中时透明，让行背景色透出来 -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness"   Value="0"/>
                                    <Setter Property="FocusVisualStyle"  Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background"  Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Foreground"  Value="{DynamicResource RowSelectedForeground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="KeywordColumn" Binding="{Binding Keyword}" Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="ToolTip" Value="{Binding Keyword}"/>
                                            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn x:Name="NameColumn" Binding="{Binding Name}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="ToolTip" Value="{Binding Name}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridComboBoxColumn x:Name="TypeColumn" SelectedItemBinding="{Binding Type}" Width="70">
                                    <DataGridComboBoxColumn.ItemsSource>
                                        <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                            <sys:String>Url</sys:String>
                                            <sys:String>Program</sys:String>
                                            <sys:String>Shell</sys:String>
                                            <sys:String>Directory</sys:String>
                                        </x:Array>
                                    </DataGridComboBoxColumn.ItemsSource>
                                    <DataGridComboBoxColumn.ElementStyle>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="ToolTip" Value="{Binding Type}"/>
                                        </Style>
                                    </DataGridComboBoxColumn.ElementStyle>
                                </DataGridComboBoxColumn>
                                <DataGridTextColumn x:Name="PathColumn" Binding="{Binding Path}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="ToolTip"         Value="{Binding Path}"/>
                                            <Setter Property="TextTrimming"    Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn x:Name="AdminColumn" Binding="{Binding RunAsAdmin}" Width="55"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- 命令参数提示 -->
                        <TextBlock x:Name="CommandHintText" Grid.Row="3"
                                   Foreground="{DynamicResource TertiaryText}"
                                   FontSize="10" FontFamily="微软雅黑" Margin="0,6,0,0"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource SeparatorBorder}" BorderThickness="0,1,0,0">
                <TextBlock x:Name="FooterText"
                           Foreground="{DynamicResource TertiaryText}"
                           FontSize="10" FontFamily="微软雅黑"
                           Margin="12,0" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
