<Window x:Class="Quanta.Views.CommandSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command Settings" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="CommandsGrid" ItemsSource="{Binding Commands}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False" Grid.Row="0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Keyword" Binding="{Binding Keyword}" Width="*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Template" Binding="{Binding Template}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0" Grid.Row="1">
            <Button Content="Add" Width="75" Margin="6,0" Click="AddCommand_Click"/>
            <Button Content="Delete" Width="75" Margin="6,0" Click="DeleteCommand_Click"/>
            <Button Content="Save" Width="75" Margin="6,0" Click="SaveCommand_Click"/>
        </StackPanel>
    </Grid>
</Window>
