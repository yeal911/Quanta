<Window x:Class="Quanta.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quanta"
        Width="540" SizeToContent="Height" MaxHeight="400" MinHeight="48"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
        Deactivated="Window_Deactivated" KeyDown="Window_KeyDown"
        MouseLeftButtonDown="MainWindow_MouseLeftButtonDown">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="ResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" Padding="12,8" Margin="2,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ThemeToggleStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="8" Background="#FFFFFF" BorderBrush="#E5E5E5" BorderThickness="1">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="å‘½ä»¤è®¾ç½®" Click="OpenCommandSettings"/>
                </ContextMenu>
            </Border.ContextMenu>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="12,10,12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="SearchBox" Grid.Column="0" 
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="14" Padding="6,4" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="#1A1A1A" CaretBrush="#1A1A1A" 
                             FontFamily="å¾®è½¯é›…é»‘"
                             VerticalAlignment="Center"/>
                    
                    <Button x:Name="ThemeToggleButton" Grid.Column="1" 
                            Style="{StaticResource ThemeToggleStyle}" 
                            Click="ThemeToggleButton_Click" 
                            ToolTip="åˆ‡æ¢ä¸»é¢˜">
                        <TextBlock x:Name="ThemeIcon" Text="ðŸŒ™" FontSize="12" Foreground="#666"/>
                    </Button>
                </Grid>

                <ListBox Grid.Row="2" x:Name="ResultsList" 
                         ItemsSource="{Binding Results}" 
                         SelectedItem="{Binding SelectedResult, Mode=TwoWay}" 
                         SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" 
                         Background="Transparent" BorderThickness="0" 
                         Padding="4,0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                         ItemContainerStyle="{StaticResource ResultItemStyle}" 
                         SelectionChanged="ResultsList_SelectionChanged" 
                         MouseDoubleClick="ResultsList_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Index -->
                                <TextBlock Grid.Column="0" Text="{Binding Index}" FontSize="11" Foreground="#999" 
                                           VerticalAlignment="Center" FontFamily="Consolas"/>
                                
                                <!-- Command -->
                                <TextBlock Grid.Column="1" Text="{Binding Title}" FontSize="13" Foreground="#0078D4" 
                                           VerticalAlignment="Center" FontFamily="Consolas" FontWeight="SemiBold"/>
                                
                                <!-- Description -->
                                <TextBlock Grid.Column="2" Text="{Binding Subtitle}" FontSize="12" Foreground="#666" 
                                           VerticalAlignment="Center" Margin="8,0,0,0" TextTrimming="CharacterEllipsis"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ProgressBar Grid.Row="2" x:Name="LoadingRing" 
                            IsIndeterminate="True" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Width="40" Height="2" 
                            Foreground="#0078D4" Background="Transparent"/>
            </Grid>
        </Border>
    </Grid>
</Window>
