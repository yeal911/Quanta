<Window x:Class="Quanta.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quanta"
        Width="560" SizeToContent="Height" MaxHeight="480" MinHeight="60"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
        Deactivated="Window_Deactivated" KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Minimalist Result Item Style -->
        <Style x:Key="ResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" Padding="16,10" Margin="4,1" CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#200078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#100078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Flat Theme Toggle Button -->
        <Style x:Key="ThemeToggleStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="16" Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="16" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="å‘½ä»¤è®¾ç½®" Click="OpenCommandSettings"/>
                    <Separator/>
                    <MenuItem Header="å…³äºŽ Quanta" IsEnabled="False"/>
                </ContextMenu>
            </Border.ContextMenu>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Input Area -->
                <Grid Grid.Row="0" Margin="16,16,16,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search Icon -->
                    <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0" Opacity="0.6"/>
                    
                    <!-- Search Box -->
                    <TextBox x:Name="SearchBox" Grid.Column="1" 
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="15" Padding="4,6" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="White" CaretBrush="White" 
                             FontFamily="Segoe UI, Microsoft YaHei"
                             VerticalAlignment="Center"/>
                    
                    <!-- Theme Toggle Button -->
                    <Button x:Name="ThemeToggleButton" Grid.Column="2" 
                            Style="{StaticResource ThemeToggleStyle}" 
                            Click="ThemeToggleButton_Click" 
                            ToolTip="åˆ‡æ¢ä¸»é¢˜">
                        <TextBlock x:Name="ThemeIcon" Text="â˜€" FontSize="14" Foreground="White" Opacity="0.8"/>
                    </Button>
                </Grid>

                <!-- Divider -->
                <Border Grid.Row="1" Height="1" Background="#333333" Margin="16,0"/>

                <!-- Results List -->
                <ListBox Grid.Row="2" x:Name="ResultsList" 
                         ItemsSource="{Binding Results}" 
                         SelectedItem="{Binding SelectedResult, Mode=TwoWay}" 
                         SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" 
                         Background="Transparent" BorderThickness="0" 
                         Padding="8,4" Margin="0,4,0,4" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                         ItemContainerStyle="{StaticResource ResultItemStyle}" 
                         SelectionChanged="ResultsList_SelectionChanged" 
                         MouseDoubleClick="ResultsList_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon -->
                                <Border Grid.Column="0" Width="28" Height="28" CornerRadius="6" Background="#2A2A2A">
                                    <TextBlock Text="â–¸" FontSize="12" Foreground="#0078D4" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Content -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                    <TextBlock Text="{Binding Title}" FontSize="14" Foreground="White" 
                                               TextTrimming="CharacterEllipsis" FontFamily="Segoe UI, Microsoft YaHei"/>
                                    <TextBlock Text="{Binding Subtitle}" FontSize="11" Foreground="#888888" 
                                               TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Loading Indicator -->
                <ProgressBar Grid.Row="2" x:Name="LoadingRing" 
                            IsIndeterminate="True" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Width="60" Height="3" 
                            Foreground="#0078D4" Background="Transparent"/>
            </Grid>
        </Border>
    </Grid>
</Window>
