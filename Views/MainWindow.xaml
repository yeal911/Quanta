<Window x:Class="Quanta.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:Quanta.Helpers"
        Title="Quanta"
        Width="540" SizeToContent="Height" MaxHeight="400" MinHeight="48"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
        PreviewKeyDown="Window_PreviewKeyDown"
        MouseLeftButtonDown="MainWindow_MouseLeftButtonDown"
        Deactivated="Window_Deactivated">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <h:GroupLabelConverter x:Key="GroupLabelConverter"/>
        
        <!-- åŠé€æ˜Žæ»šåŠ¨æ¡æ ·å¼ -->
        <Style x:Key="TransparentScrollBarThumb" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#20000000" CornerRadius="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="ScrollBarLineButton" TargetType="RepeatButton">
            <Border Background="Transparent" Height="16"/>
        </ControlTemplate>
        <ControlTemplate x:Key="ScrollBarPageButton" TargetType="RepeatButton">
            <Border Background="Transparent"/>
        </ControlTemplate>

        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="#10000000" CornerRadius="4" Opacity="0"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Template="{StaticResource ScrollBarPageButton}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource TransparentScrollBarThumb}" Margin="1,0"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Template="{StaticResource ScrollBarPageButton}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="Height" Value="8"/>
                                <Setter Property="MinHeight" Value="8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                       Grid.Column="1" 
                                       Style="{StaticResource ModernScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <!-- ç”¨ TemplateBinding Backgroundï¼Œè®© Style.Triggers å¯é€šè¿‡ DynamicResource æŽ§åˆ¶é¢œè‰² -->
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="12,8" Margin="2,1">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ListItemSelectedBackground}"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsSelected"  Value="False"/>
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Background" Value="{DynamicResource ListItemHoverBackground}"/>
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThemeToggleStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="8" Background="{DynamicResource WindowBackground}" BorderBrush="{DynamicResource WindowBorder}" BorderThickness="1">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="12,10,12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search icon with right-click menu -->
                    <TextBlock x:Name="SearchIcon" Grid.Column="0" Text="ðŸ”" FontSize="14"
                               Foreground="{DynamicResource TertiaryText}" VerticalAlignment="Center" Cursor="Hand"
                               Margin="0,0,4,0" MouseRightButtonUp="SearchIcon_RightClick">
                        <TextBlock.ContextMenu>
                            <ContextMenu x:Name="SearchIconMenu"/>
                        </TextBlock.ContextMenu>
                    </TextBlock>

                    <!-- Placeholder text -->
                    <TextBlock x:Name="PlaceholderText" Grid.Column="1"
                               Text="è¯·è¾“å…¥å‘½ä»¤å…³é”®å­—" FontSize="14" Padding="6,4"
                               Foreground="{DynamicResource TertiaryText}" FontFamily="å¾®è½¯é›…é»‘"
                               VerticalAlignment="Center" IsHitTestVisible="False"
                               Visibility="Visible"/>

                    <!-- "keyword >" indicator for param mode: keyword=blue, >=red -->
                    <StackPanel x:Name="ParamIndicator" Grid.Column="1"
                                Orientation="Horizontal" Margin="6,4,0,4"
                                VerticalAlignment="Center" IsHitTestVisible="False"
                                Visibility="Collapsed" Panel.ZIndex="1">
                        <TextBlock x:Name="ParamKeywordText" FontSize="14"
                                   Foreground="#0078D4" FontFamily="Consolas" FontWeight="Bold"/>
                        <TextBlock x:Name="ParamArrowText" Text=" >" FontSize="14"
                                   Foreground="#E74C3C" FontFamily="Consolas" FontWeight="Bold"/>
                    </StackPanel>

                    <TextBox x:Name="SearchBox" Grid.Column="1"
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14" Padding="6,4"
                             Background="Transparent" BorderThickness="0"
                             Foreground="{DynamicResource PrimaryText}" CaretBrush="{DynamicResource PrimaryText}"
                             FontFamily="å¾®è½¯é›…é»‘"
                             VerticalAlignment="Center"
                             AcceptsReturn="True"
                             MaxHeight="28"
                             TextWrapping="Wrap"
                             TextChanged="SearchBox_TextChanged"/>

                    <Button x:Name="ThemeToggleButton" Grid.Column="2"
                            Style="{StaticResource ThemeToggleStyle}"
                            Click="ThemeToggleButton_Click"
                            MouseRightButtonUp="ThemeToggleButton_RightClick"
                            ToolTip="åˆ‡æ¢ä¸»é¢˜">
                        <TextBlock x:Name="ThemeIcon" Text="ðŸŒ™" FontSize="12" Foreground="{DynamicResource SecondaryText}"/>
                    </Button>
                </Grid>

                <ScrollViewer Grid.Row="2" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                    </ScrollViewer.Resources>
                    <ListBox x:Name="ResultsList"
                             ItemsSource="{Binding ResultsView}"
                             SelectedItem="{Binding SelectedResult, Mode=TwoWay}"
                             SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                             Background="Transparent" BorderThickness="0"
                             Padding="4,0"
                             ItemContainerStyle="{StaticResource ResultItemStyle}"
                             SelectionChanged="ResultsList_SelectionChanged"
                             PreviewMouseLeftButtonUp="ResultsList_MouseClick"
                             Loaded="ResultsList_Loaded">

                    <!-- åˆ†ç»„æ ‡é¢˜æ ·å¼ï¼šä»…å½“æœ‰å¤šç§ç»“æžœç±»åž‹æ—¶æ‰æ˜¾ç¤ºåˆ†ç»„æ ‡é¢˜ -->
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="GroupItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GroupItem">
                                                <StackPanel>
                                                    <!-- åˆ†ç»„æ ‡é¢˜ï¼šç©º GroupLabel æ—¶éšè— -->
                                                    <Border x:Name="GroupHeader"
                                                            Margin="6,4,0,0" Padding="2,2,0,1"
                                                            BorderBrush="{DynamicResource GroupHeaderBorder}" BorderThickness="0,0,0,1">
                                                        <TextBlock x:Name="GroupNameText"
                                                                   Text="{Binding Name, Converter={StaticResource GroupLabelConverter}}"
                                                                   FontSize="10" Foreground="{DynamicResource TertiaryText}"
                                                                   FontFamily="å¾®è½¯é›…é»‘"/>
                                                    </Border>
                                                    <ItemsPresenter/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <!-- ç©º GroupLabel æ—¶éšè—åˆ†ç»„æ ‡é¢˜ -->
                                                    <DataTrigger Binding="{Binding Name}" Value="">
                                                        <Setter TargetName="GroupHeader" Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Name}" Value="{x:Null}">
                                                        <Setter TargetName="GroupHeader" Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- Normal results -->
                                <Grid x:Name="NormalContainer">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="22"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Index -->
                                    <TextBlock Grid.Column="0" Text="{Binding Index}" FontSize="11" Foreground="{DynamicResource RowNumberText}"
                                               VerticalAlignment="Center" FontFamily="Consolas"/>

                                    <!-- Icon -->
                                    <TextBlock Grid.Column="1" Text="{Binding IconText}" FontSize="12"
                                               x:Name="ResultIcon" VerticalAlignment="Center"
                                               Foreground="{DynamicResource PrimaryText}"/>

                                    <!-- Command -->
                                    <TextBlock Grid.Column="2" FontSize="13" Foreground="#0078D4"
                                               VerticalAlignment="Center" FontFamily="Consolas" FontWeight="SemiBold"
                                               MaxWidth="200" Margin="4,0,0,0"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Title}"
                                               h:HighlightHelper.Text="{Binding Title}"
                                               h:HighlightHelper.Query="{Binding QueryMatch}"/>

                                    <!-- Type -->
                                    <TextBlock Grid.Column="3" FontSize="10" Foreground="{DynamicResource TertiaryText}"
                                               VerticalAlignment="Center" Margin="8,0,0,0" FontFamily="Consolas"
                                               Opacity="0.8">
                                        <TextBlock.Text>
                                            <Binding Path="CommandConfig.Type" FallbackValue="" TargetNullValue=""/>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <!-- Path -->
                                    <TextBlock Grid.Column="4" Text="{Binding Path}" FontSize="10" Foreground="{DynamicResource TertiaryText}"
                                               VerticalAlignment="Center" Margin="8,0,0,0" FontFamily="Consolas"
                                               MaxWidth="150" TextTrimming="CharacterEllipsis" ToolTip="{Binding Path}"/>

                                    <!-- Description -->
                                    <StackPanel Grid.Column="5" Margin="8,0,0,0" VerticalAlignment="Center">
                                        <!-- SubtitleSmall (larger font for exchange rate) -->
                                        <TextBlock Text="{Binding SubtitleSmall}" FontSize="12" Foreground="{DynamicResource SecondaryText}"
                                                   TextTrimming="CharacterEllipsis" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SubtitleSmall}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                        <DataTrigger Binding="{Binding SubtitleSmall}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <!-- Subtitle (smaller font for time/cache) -->
                                        <TextBlock Text="{Binding Subtitle}" FontSize="10" Foreground="{DynamicResource TertiaryText}"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Subtitle}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Subtitle}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <!-- QRCode results: show only the QR image, large size -->
                                <Grid x:Name="QRCodeContainer" Visibility="Collapsed">
                                    <Image Source="{Binding QRCodeImage}" Width="200" Height="200"
                                           Stretch="Uniform" HorizontalAlignment="Center"/>
                                </Grid>

                                <!-- Color preview: show color swatch + all 3 formats -->
                                <Grid x:Name="ColorContainer" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <!-- Color swatch -->
                                        <Image Source="{Binding ColorPreviewImage}" Width="30" Height="30"
                                               Stretch="Uniform" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <!-- HEX -->
                                        <TextBlock Text="{Binding ColorInfo.Hex}" FontSize="11" FontFamily="Consolas" 
                                                   Foreground="#0078D4" VerticalAlignment="Center" Margin="0,0,8,0"
                                                    Cursor="Hand" MouseRightButtonUp="CopyColorHex_RightClick">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="å³é”®å¤åˆ¶"/>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        <!-- RGB -->
                                        <TextBlock Text="{Binding ColorInfo.Rgb}" FontSize="11" FontFamily="Consolas" 
                                                   Foreground="#E67E22" VerticalAlignment="Center" Margin="0,0,8,0"
                                                   Cursor="Hand" MouseRightButtonUp="CopyColorRgb_RightClick">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="å³é”®å¤åˆ¶"/>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        <!-- HSL -->
                                        <TextBlock Text="{Binding ColorInfo.Hsl}" FontSize="11" FontFamily="Consolas" 
                                                   Foreground="#27AE60" VerticalAlignment="Center"
                                                   Cursor="Hand" MouseRightButtonUp="CopyColorHsl_RightClick">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="å³é”®å¤åˆ¶"/>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <!-- RecordCommand result: show recording config panel -->
                                <Grid x:Name="RecordContainer" Visibility="Collapsed">
                                    <StackPanel Orientation="Vertical" Margin="0,2">
                                        <!-- æ ‡é¢˜è¡Œ -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock Text="ðŸŽ™ " FontSize="14" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding RecordData.FilePrefix, FallbackValue='record'}"
                                                       FontSize="13" Foreground="#0078D4" FontFamily="Consolas"
                                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            <TextBlock Text=" â€” " FontSize="12" Foreground="{DynamicResource TertiaryText}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Subtitle}" FontSize="12" Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- é…ç½®èŠ¯ç‰‡è¡Œï¼šå³é”®ç‚¹å‡»å¯åˆ‡æ¢ -->
                                        <WrapPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <!-- å½•åˆ¶æº -->
                                            <Border x:Name="SourceChip" Tag="Source"
                                                    Background="#E8F4FF" CornerRadius="4" Padding="8,3" Margin="0,0,6,4"
                                                    Cursor="Hand"
                                                    ToolTip="{Binding RecordData.SourceTooltip}"
                                                    MouseRightButtonUp="RecordChip_RightClick">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding RecordData.SourceIcon}" FontSize="11" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding RecordData.Source}" FontSize="11" FontFamily="å¾®è½¯é›…é»‘" Foreground="#0078D4"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- è¾“å‡ºæ ¼å¼ -->
                                            <Border x:Name="FormatChip" Tag="Format"
                                                    Background="#F0F8E8" CornerRadius="4" Padding="8,3" Margin="0,0,6,4"
                                                    Cursor="Hand"
                                                    ToolTip="{Binding RecordData.FormatTooltip}"
                                                    MouseRightButtonUp="RecordChip_RightClick">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“„ " FontSize="11"/>
                                                    <TextBlock Text="{Binding RecordData.Format}" FontSize="11" FontFamily="Consolas" Foreground="#27AE60"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- ç çŽ‡ -->
                                            <Border x:Name="BitrateChip" Tag="Bitrate"
                                                    Background="#F8E8FF" CornerRadius="4" Padding="8,3" Margin="0,0,6,4"
                                                    Cursor="Hand"
                                                    ToolTip="{Binding RecordData.BitrateTooltip}"
                                                    MouseRightButtonUp="RecordChip_RightClick">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“¶ " FontSize="11"/>
                                                    <TextBlock Text="{Binding RecordData.BitrateDisplay}" FontSize="11" FontFamily="Consolas" Foreground="#8E44AD"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- å£°é“ -->
                                            <Border x:Name="ChannelsChip" Tag="Channels"
                                                    Background="#E8F4FF" CornerRadius="4" Padding="8,3" Margin="0,0,6,4"
                                                    Cursor="Hand"
                                                    ToolTip="{Binding RecordData.ChannelsTooltip}"
                                                    MouseRightButtonUp="RecordChip_RightClick">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ”Š " FontSize="11"/>
                                                    <TextBlock Text="{Binding RecordData.ChannelsDisplay}" FontSize="11" FontFamily="Consolas" Foreground="#3498DB"/>
                                                </StackPanel>
                                            </Border>
                                        </WrapPanel>

                                        <!-- è¾“å‡ºè·¯å¾„ï¼ˆåªè¯»æ˜¾ç¤ºï¼‰ -->
                                        <TextBlock Text="{Binding RecordData.OutputFileName}"
                                                   FontSize="10" FontFamily="Consolas" Foreground="{DynamicResource TertiaryText}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding RecordData.OutputFileName}"
                                                   Margin="0,0,0,2"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>

                            <!-- Trigger to switch between normal, QRCode, Color and Record -->
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="QRCode">
                                    <Setter TargetName="NormalContainer" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="QRCodeContainer" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="RecordCommand">
                                    <Setter TargetName="NormalContainer" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="RecordContainer" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <!-- Color preview trigger: check IconText for ðŸŽ¨ -->
                                <DataTrigger Binding="{Binding IconText}" Value="ðŸŽ¨">
                                    <Setter TargetName="NormalContainer" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="ColorContainer" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                </ScrollViewer>

                <ProgressBar Grid.Row="2" x:Name="LoadingRing" 
                            IsIndeterminate="True" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Width="40" Height="2" 
                            Foreground="#0078D4" Background="Transparent"/>
            </Grid>
        </Border>
    </Grid>
</Window>
